{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "existingAppInsightsResourceId": {
      "type": "string"
    },
    "virtualApplications": {
      "type": "array",
      "defaultValue": []
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "appServicePlanSkuName": "F1",
    "appServicePlanName": "[concat(parameters('siteName'),'_ASP001')]",
    "defaultVirtualApplications": [
      {
        "virtualPath": "/",
        "physicalPath": "site\\wwwroot"
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[variables('appServicePlanName')]"
      },
      "sku": {
        "name": "[variables('appServicePlanSkuName')]",
        "tier":  "Free"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[parameters('siteName')]",
      "kind": "app",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('appServicePlanName')]"
      ],
      "tags": {
        "displayName": "WebApp"
      },
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "AppSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(parameters('existingAppInsightsResourceId'), '2015-05-01', 'Full').properties.InstrumentationKey]"
            },
            {
              "name": "ApplicationInsights.InstrumentationKey",
              "value": "[reference(parameters('existingAppInsightsResourceId'), '2015-05-01', 'Full').properties.InstrumentationKey]"
            }
          ],
          "virtualApplications": "[union(variables('defaultVirtualApplications'),parameters('virtualApplications'))]",
          "minTlsVersion": "1.2",
          "defaultDocuments": [
            "index.html"
          ],
          "remoteDebuggingEnabled": false,
          "remoteDebuggingVersion": "",
          "ftpsState": "Disabled",
          "phpVersion": "",
          "netFrameworkVersion": "v4.7",
          "nodeVersion": "",
          "pythonVersion": "",
          "linuxFxVersion": "",
          "httpLoggingEnabled": true
        },
        "httpsOnly": true
      },
      "resources": [
        {
          "type": "siteextensions",
          "apiVersion": "2016-08-01",
          "name": "Microsoft.ApplicationInsights.AzureWebSites",
          "dependsOn": [
            "[parameters('siteName')]"
          ],
          "properties": {}
        },
        {
          "type": "config",
          "apiVersion": "2016-08-01",
          "name": "logs",
          "dependsOn": [
            "[parameters('siteName')]",
            "Microsoft.ApplicationInsights.AzureWebSites"
          ],
          "properties": {
            "httpLogs": {
              "fileSystem": {
                "retentionInMb": "35",
                "retentionInDays": "1",
                "enabled": "true"
              }
            },
            "failedRequestsTracing": {
              "enabled": "true"
            },
            "detailedErrorMessages": {
              "enabled": "true"
            }
          }
        }
      ]
    }
  ],
  "outputs": {
    "result": {
      "type": "object",
      "value": "[reference(parameters('siteName'), '2016-08-01', 'Full')]"
    }
  }
}